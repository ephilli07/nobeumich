---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import FadeIn from "../components/FadeIn";

const APPLICATION_URL = "https://forms.gle/KPb8Le8rtYrQpAAF6";

const TIMELINE = [
  {
    date: "1/21",
    title: "Mass Meeting",
    detail: "Michigan League · Henderson Room · 8:15 PM",
  },
  {
    date: "1/22–1/23",
    title: "Speed Dating",
    detail: "Zoom · various times",
  },
  {
    date: "1/23",
    title: "Applications Due",
    detail: "11:59 PM",
    emphasize: true,
  },
  {
    date: "1/26–1/30",
    title: "Interviews (Invite Only)",
    detail: "various times",
  },
];

---

<Layout title="Prospective Members • NOBE">
  <Nav />

  <main class="pb-20">
    <FadeIn client:load>
      <header class="mt-10">
        <p class="text-xs uppercase tracking-[0.22em] text-[#999999]">
          Prospective Members
        </p>

        <h1 class="mt-4 text-4xl font-semibold tracking-tight md:text-5xl">
          Recruitment
        </h1>

        <p class="mt-4 max-w-3xl text-lg text-black/70 leading-relaxed">
          Interested in joining NOBE at the University of Michigan? Here’s our current recruiting timeline and the
          application link.
        </p>

        <div class="mt-6 flex flex-wrap gap-3">
          <a
            href={APPLICATION_URL}
            target="_blank"
            rel="noopener noreferrer"
            class="rounded-full bg-[#00284d] px-6 py-3 text-sm text-white hover:opacity-90 transition"
          >
            Submit application
          </a>

          <a
            href="#timeline"
            class="rounded-full border border-[#c1c1c1] px-6 py-3 text-sm hover:border-[#00284d] hover:text-[#00284d] transition"
          >
            View timeline
          </a>
        </div>

        <p class="mt-3 text-sm text-black/50">
          Times listed are Eastern Time (Ann Arbor).
        </p>
      </header>
    </FadeIn>

    <FadeIn client:load delay={0.08}>
      <section id="timeline" class="mt-12 max-w-4xl">

        <div class="flex items-end justify-between gap-6">
          <div>
            <p class="text-xs uppercase tracking-[0.22em] text-[#999999]">
              Timeline
            </p>
            <h2 class="mt-3 text-2xl font-semibold">
              Recruiting schedule
            </h2>
          </div>

          <a
            href={APPLICATION_URL}
            target="_blank"
            rel="noopener noreferrer"
            class="hidden md:inline-flex items-center rounded-full border border-[#00284d] px-4 py-2 text-sm font-medium text-[#00284d] hover:bg-[#00284d] hover:text-white transition"
          >
            Submit application
          </a>
        </div>

        <div class="mt-6 grid gap-6">
          {TIMELINE.map((e) => (
            <div
              class:list={[
                "rounded-3xl border p-6",
                e.emphasize ? "border-[#00284d] bg-[#00284d]/5" : "border-[#c1c1c1] bg-white",
              ]}
            >
              <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
                <div class="flex items-center gap-4">
<div
  class:list={[
    "inline-flex min-w-26 whitespace-nowrap items-center justify-center rounded-full px-4 py-2 text-sm font-semibold",
    e.emphasize ? "bg-[#00284d] text-white" : "bg-black/5 text-black",
  ]}
>
                    {e.date}
                  </div>

                  <div>
                    <h3 class="text-lg font-semibold tracking-tight">
                      {e.title}
                    </h3>
                    <p class="mt-1 text-sm text-black/70">
                      {e.detail}
                    </p>
                  </div>
                </div>

                {e.title === "Applications Due" && (
                  <a
                    href={APPLICATION_URL}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center rounded-full bg-[#00284d] px-5 py-2.5 text-sm text-white hover:opacity-90 transition md:ml-auto"
                  >
                    Apply now
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      </section>
    </FadeIn>

    <FadeIn client:load delay={0.16}>
      <section class="mt-12 rounded-3xl bg-[#00284d] p-8 text-white">
        <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
          <div>
            <h2 class="text-2xl font-semibold">Ready to apply?</h2>
            <p class="mt-2 text-white/80">
              Submit your application using the link below.
            </p>
          </div>

          <div class="flex gap-3">
            <a
              href={APPLICATION_URL}
              target="_blank"
              rel="noopener noreferrer"
              class="rounded-full bg-white px-6 py-3 text-sm font-medium text-[#00284d] hover:bg-white/90 transition"
            >
              Submit application
            </a>
            <a
              href="https://mail.google.com/mail/?view=cm&fs=1&to=nobeumich@gmail.com&su=Recruitment%20Question"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center rounded-full border border-white/40 px-6 py-3 text-sm text-white hover:border-white hover:bg-white/10 transition"
            >
              Email questions
            </a>
          </div>
        </div>
      </section>
    </FadeIn>
  </main>
</Layout>
